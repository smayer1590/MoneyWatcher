                    <local:Bar x:Name="Bar12" Background="#FF4455AA" Margin="24,0" VerticalAlignment="Bottom"/>
                </StackPanel>

                <TextBlock x:Name="amount1" Width="68" Margin="0,0,748,220"  HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Franklin Gothic Demi Cond" TextAlignment="Center" FontSize="14"/>
